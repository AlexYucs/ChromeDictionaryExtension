{
  "manifest_version": 2,

  "name": "Word Bank",
  "description": "This extension defines words using Merriam Webster API. Just highlight and hover.",
  "version": "2.1",
  "browser_action": {
   "default_icon": "icon.png"

  },
  
  "icons": {
           "48": "48icon.png" },
  
  
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["main.css"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
	],

  
 "permissions": [
    "contextMenus",
	"tabs",
	"http://www.dictionaryapi.com/"
	
 ]
 

}
