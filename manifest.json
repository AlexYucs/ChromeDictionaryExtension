{
  "manifest_version": 2,

  "name": "Word Bank",
  "description": "This extension defines words using Meriam Webster API. Just highlight and hover.",
  "version": "2.1",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["main.css"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
	],

  
 "permissions": [
    "contextMenus",
	"tabs",
	"http://www.dictionaryapi.com/"
	
 ]
 

}
