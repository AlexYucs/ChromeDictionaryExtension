{
  "manifest_version": 2,

  "name": "Word Bank",
  "description": "This will define words in tabs",
  "version": "1.1",

 "browser_action": {
   "default_title": "Testing",
   "default_icon": "icon.png",
   "default_popup": "popup.html" 
 },
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["content.js"]
   }
 ],
 
 "background": {
    "scripts": ["background.js"],
	"persistent": false
  },
  
 "permissions": [
    "contextMenus",
	"tabs"
	
 ]
 

}
